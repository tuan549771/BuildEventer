<Window x:Class="PostBuildCopy.Windowns.WindowNewFilter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Filter" SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen"
        Icon="/PostBuildCopy;component/Images/virtium.jpg"
        ContentRendered="Window_ContentRendered">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" >
            <Label Name="lblQuestion" Grid.Row="0" Width="100" DockPanel.Dock="Left">New Filter:</Label>
            <TextBox Name="txtAnswer" Grid.Row="0" MinWidth="250" DockPanel.Dock="Left">*.dll</TextBox>
        </DockPanel>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
