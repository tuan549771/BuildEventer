<UserControl x:Class="PostBuildCopy.UI.TreeParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TreeView Name="tvParameters" Grid.Column="0">
            <TreeViewItem Name="treeNodeParameter" Header=" Parameters  " IsExpanded="True" FontSize="14"/>
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <EventSetter Event="TreeViewItem.MouseMove" Handler="tvParameter_MouseMove"/>
                    <EventSetter Event="TreeViewItem.MouseRightButtonDown" Handler="tvParameter_MouseRight"/>
                </Style>
            </TreeView.ItemContainerStyle>
            <TreeView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="New" Click="NewParameterMenu_Click"></MenuItem>
                    <MenuItem Header="Delete" Click="DeleteParameterMenu_Click"></MenuItem>
                </ContextMenu>
            </TreeView.ContextMenu>
        </TreeView>

    </Grid>
</UserControl>
